html 
    head
        meta(charset ='utf-8')
        title= 'To Do List - Minjeong & Kunyong'

    body
        hi= toDoListTitle
        form(action='/add_list' method='post')
            p 
                label(for='content') Something to Study : 
                input(type ='text' name='content')
                input(type='submit' value ='add')
            p 
                ul
                    each val in toDoLists
                        li=val
            p
                input(type='button' value='add' onclick="addNewItem()")


    script(type='text/javascript').
        addNewItem = function(){
            var url = "popup.pug"
            var name = "popup test"
            var option = "width = 500, height=500, top=100, left=200, location=no"
            window.open(url,name,option)
        }
